---
import { baseUrl } from "@/utils/functions"

 const jestLogo = baseUrl('/assets/jest.svg');
---

<section class="am-hero1">
  <h1>20 Exercises and more With Jest <img src={jestLogo} alt="Jest"></h1>
</section>

<style>
  .am-hero1 {
    height: 100vh;
    width: 100%;
    position: relative;
    display: flex;
    flex-wrap: wrap;
    place-content: center;
    pointer-events: none;

    h1 {
      font-size: 4vmax;
      color: transparent;
      background-clip: text;
      background-image: linear-gradient(45deg, #99425b, white);

      img {
        width: 3vmax;
        transform: translateY(0.5vmax);
      }
    }
  }
</style>